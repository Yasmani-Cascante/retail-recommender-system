# MCP Bridge - Real Shopify Integration Environment Variables

# Shopify Admin API Configuration
SHOPIFY_SHOP_URL=your-shop-name.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_admin_api_access_token_here
SHOPIFY_API_VERSION=2024-07

# Server Configuration
MCP_BRIDGE_PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Security & Rate Limiting
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_WEB_PIXELS_SIMULATION=true
ENABLE_REAL_TIME_INVENTORY=true
ENABLE_MARKET_ADAPTATION=true

# Fallback Configuration
FALLBACK_MODE=intelligent
FALLBACK_CONFIDENCE_THRESHOLD=0.5

# Monitoring
ENABLE_METRICS_COLLECTION=true
ENABLE_PERFORMANCE_LOGGING=true

# Development/Testing
MOCK_MODE=false
ENABLE_DEBUG_LOGGING=true