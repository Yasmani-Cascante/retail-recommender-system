# Google Cloud Configuration
GOOGLE_PROJECT_NUMBER=your_project_number
GOOGLE_LOCATION=global
GOOGLE_CATALOG=default_catalog
GOOGLE_SERVING_CONFIG=default_recommendation_config
USE_GCS_IMPORT=true
GCS_BUCKET_NAME=your_bucket_name

# API Security
API_KEY=your_api_key_here

# Shopify Configuration
SHOPIFY_SHOP_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token_here

# Recommender Configuration
CONTENT_WEIGHT=0.5
TFIDF_MODEL_PATH=data/tfidf_model.pkl
EXCLUDE_SEEN_PRODUCTS=true
USE_FALLBACK=true
METRICS_ENABLED=true
VALIDATE_PRODUCTS=true

# Architecture Configuration
USE_UNIFIED_ARCHITECTURE=true
USE_TRANSFORMERS=false

# Redis Configuration
USE_REDIS_CACHE=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=0
REDIS_SSL=false
CACHE_TTL=86400
CACHE_PREFIX=product:
CACHE_ENABLE_BACKGROUND_TASKS=true

# Debug Configuration
DEBUG=false
STARTUP_TIMEOUT=300

# Currency Configuration
DEFAULT_CURRENCY=COP