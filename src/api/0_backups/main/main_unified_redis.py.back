@app.on_event("startup")
async def enterprise_startup():
    """‚úÖ ENTERPRISE: Startup event con validation y health checks"""
    logger.info("üöÄ Starting Enterprise Retail Recommender System v2.1.0")
    
    try:
        # ‚úÖ Validate factory architecture
        architecture_validation = validate_factory_architecture()
        logger.info(f"‚úÖ Factory architecture validation: {architecture_validation}")
        
        # ‚úÖ Initialize enterprise services
        logger.info("üîß Initializing enterprise services...")
        
        # Initialize Redis enterprise
        redis_service = await ServiceFactory.get_redis_service()
        logger.warning(f"‚ö†Ô∏è Main redis_service initialized: {redis_service}")
        redis_health = await redis_service.health_check()
        logger.info(f"‚úÖ Enterprise Redis initialized: {redis_health.get('status')}")
        
        # Initialize product cache enterprise
        product_cache = await ServiceFactory.get_product_cache_singleton()
        logger.info("‚úÖ Enterprise ProductCache initialized")
        
        # Initialize inventory service enterprise
        inventory_service = await ServiceFactory.get_inventory_service_singleton()
        logger.info("‚úÖ Enterprise InventoryService initialized")
        
        # ‚úÖ Initialize Shopify integration
        shopify_client = init_shopify()
        if shopify_client:
            logger.info("‚úÖ Shopify client initialized")
        else:
            logger.warning("‚ö†Ô∏è Shopify client initialization failed")
        
        # ‚úÖ Comprehensive health check
        overall_health = await HealthCompositionRoot.comprehensive_health_check()
        logger.info(f"‚úÖ Enterprise system health: {overall_health.get('overall_status', 'unknown')}")
        
        logger.info("üéâ Enterprise system startup completed successfully")
        
    except Exception as e:
        logger.error(f"‚ùå Enterprise startup failed: {e}")
        # Continue startup even if some services fail
        logger.info("‚ö†Ô∏è Continuing with partial enterprise services")

